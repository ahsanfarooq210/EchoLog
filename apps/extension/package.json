{
  "name": "extension",
  "displayName": "Extension",
  "version": "0.0.1",
  "description": "Chrome extension for echolog google meet functionality",
  "author": "Ahsan Farooq",
  "scripts": {
    "dev": "pnpm with-env plasmo dev",
    "build": "pnpm with-env plasmo build",
    "package": "pnpm with-env plasmo package",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@workspace/ui": "workspace:*",
    "axios": "^1.7.9",
    "better-auth": "^1.1.18",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "lucide-react": "0.456.0",
    "plasmo": "0.89.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@workspace/eslint-config": "workspace:^",
    "@workspace/typescript-config": "workspace:*",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "key": "$CRX_PUBLIC_KEY",
    "host_permissions": [
      "http://localhost:3001/*"
    ],
    "oauth2": {
      "client_id": "$PLASMO_PUBLIC_GOOGLE_CLIENT_ID",
      "scopes": [
        "https://www.googleapis.com/auth/userinfo.email",
        "https://www.googleapis.com/auth/userinfo.profile",
        "openid",
        "email",
        "profile"
      ]
    },
    "permissions": [
      "identity",
      "identity.email",
      "cookies",
      "http://localhost:3001"
    ]
  }
}
